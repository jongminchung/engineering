{
  "name": "engineering",
  "type": "module",
  "workspaces": [
    "frontend/*",
    "platform/*"
  ],
  "scripts": {
    "prepare": "husky",
    "check": "biome check --write --unsafe",
    "check:markdown": "markdownlint-cli2 --fix **/*.md"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": "^24"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "^1.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0"
  },
  "lint-staged": {
    "**/*.md": "markdownlint-cli2 --fix",
    "**/*.java": "sh -c './gradlew spotlessApply'"
  }
}
