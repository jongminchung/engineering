{
  "name": "engineering",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend/*",
      "platform/*",
      "me/*",
      "perf-test/*"
    ],
    "catalog": {
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "@types/react": "^19.2.3",
      "@types/react-dom": "^19.2.3",
      "typescript": "^5.9.3"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "check": "biome check --write --unsafe",
    "check:prettier": "prettier --write **/*.{md,yml,yaml}"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "^1.3.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "**/*.{md,yml,yaml}": "prettier --write",
    "**/*.{js,jsx,ts,tsx,json,html,css}": "biome check --write --unsafe",
    "**/*.java": "sh -c './gradlew spotlessApply'"
  }
}
