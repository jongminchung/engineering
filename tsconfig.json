{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "target": "ESNext",

    "strict": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "noEmit": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"]
  }
}
