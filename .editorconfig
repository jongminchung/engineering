root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
max_line_length = 80

# In the md language, 4 spaces are required when putting <ul> in the <ol> subordinate.
indent_size = 4
indent_style = space

[{**.yml,**.json}]
indent_size = 2

[*.md]
# 1. ordered list
# (space이면 자동 포맷팅 때 space가 사라지고 `1. ordered list` 랑 depth가 같아짐)
#   - unordered list
indent_style = tab
indent_size = 2
